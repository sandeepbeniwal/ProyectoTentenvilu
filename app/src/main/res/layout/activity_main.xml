<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.blogspot.aprehendemapudungun.aprehendemapudungun.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_weight="2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/sinnombre1"
            android:layout_marginTop="@dimen/Margen_logo"
            android:layout_marginBottom="@dimen/Margen_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo"
            android:textSize="@dimen/tamano_titulo"
            android:textColor="@color/ColorLetras" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/LinearLayoutB">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_abecedario"
            android:id="@+id/btn_abc"
            android:onClick="ejecutarBotonesMain"
            android:textSize="@dimen/Tam_letra_btns"
            android:height="@dimen/Tam_alt_btns"
            android:width="@dimen/Tam_anch_btns"
            android:background="@color/FondoBoton"
            android:textColor="@color/ColorTextoBoton"
            android:layout_marginTop="@dimen/Margen_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_categorias"
            android:id="@+id/btn_categorias"
            android:onClick="ejecutarBotonesMain"
            android:textSize="@dimen/Tam_letra_btns"
            android:height="@dimen/Tam_alt_btns"
            android:width="@dimen/Tam_anch_btns"
            android:background="@color/FondoBoton"
            android:textColor="@color/ColorTextoBoton"
            android:layout_marginTop="@dimen/Margen_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_informacion"
            android:id="@+id/btn_informacion"
            android:onClick="ejecutarBotonesMain"
            android:textSize="@dimen/Tam_letra_btns"
            android:height="@dimen/Tam_alt_btns"
            android:width="@dimen/Tam_anch_btns"
            android:background="@color/FondoBoton"
            android:textColor="@color/ColorTextoBoton"
            android:layout_marginTop="@dimen/Margen_btn" />

    </LinearLayout>

</LinearLayout>
