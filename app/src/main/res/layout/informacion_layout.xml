<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/appBarInformacion"
        android:elevation="@dimen/elevacion_app_bar"
        xmlns:android="http://schemas.android.com/apk/res/android">
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/banner"
            android:scaleType="fitStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/tv_informacion"
            android:text="@string/texto_informacion"
            android:textSize="@dimen/tamano_texto_informacion"
            android:layout_marginLeft="@dimen/margen_izq_texto" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_banner_bajo"
            android:src="@mipmap/banner"
            android:scaleType="fitEnd" />

    </LinearLayout>

</LinearLayout>